  },
  "homepage": "https://github.com/lauramparker/GardenGrow_Project3#readme",
  "dependencies": {
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongodb": "^3.6.4",
    "mongoose": "^5.12.0"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0"
  }
